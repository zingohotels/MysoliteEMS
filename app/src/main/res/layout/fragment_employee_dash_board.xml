<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card-view="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="app.zingo.mysolite.ui.newemployeedesign.EmployeeDashBoardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scroll_view"
                android:scrollbars="none">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/linear_title"
                        android:background="@color/colorPrimary"></View>



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:id="@+id/cardview_data_count"
                        android:layout_height="100dp"
                        android:layout_marginTop="-30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@+id/linear_title"
                        card-view:cardElevation="5dp"
                        card_view:cardCornerRadius="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/worked_days_layout"
                                android:orientation="vertical">

                                <app.zingo.mysolite.Custom.MyRegulerText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"

                                    android:gravity="center_horizontal"
                                    android:text="Worked Days"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="10dp"
                                    android:textColor="#000"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">
                                    <app.zingo.mysolite.Custom.MyRegulerText
                                        android:id="@+id/worked_days_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="20sp"
                                        android:gravity="center"
                                        android:text="0"
                                        android:paddingTop="5dp"
                                        android:paddingLeft="15dp"
                                        android:textColor="#AFB42B"
                                        />


                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/leave_days_layouot"
                                android:orientation="vertical">

                                <app.zingo.mysolite.Custom.MyRegulerText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:gravity="center_horizontal"
                                    android:text="Leave Taken days"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="10dp"
                                    android:textColor="#000"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">
                                    <app.zingo.mysolite.Custom.MyRegulerText
                                        android:id="@+id/leave_days_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:textSize="20sp"
                                        android:text="0"
                                        android:paddingTop="5dp"
                                        android:paddingLeft="15dp"
                                        android:textColor="#FBC02D"
                                        />


                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/on_task_count_layout"
                                android:orientation="vertical">

                                <app.zingo.mysolite.Custom.MyRegulerText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:gravity="center_horizontal"
                                    android:text="On-Going Task"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="10dp"
                                    android:textColor="#000"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">
                                    <app.zingo.mysolite.Custom.MyRegulerText
                                        android:id="@+id/on_task_count_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:textSize="20sp"
                                        android:text="0"
                                        android:paddingTop="5dp"
                                        android:paddingLeft="15dp"
                                        android:textColor="#D81B60"
                                        />


                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/pending_task_layout"
                                android:orientation="vertical">

                                <app.zingo.mysolite.Custom.MyRegulerText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:gravity="center_horizontal"
                                    android:text="Pending Task"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="10dp"
                                    android:textColor="#000"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">
                                    <app.zingo.mysolite.Custom.MyRegulerText
                                        android:id="@+id/pending_task_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:textSize="20sp"
                                        android:text="0"
                                        android:paddingTop="5dp"
                                        android:paddingLeft="15dp"
                                        android:textColor="#F44336"
                                        />


                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="16sp"
                        android:layout_below="@+id/cardview_data_count"
                        android:id="@+id/log_out_time"/>

                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_below="@+id/log_out_time"
                        android:id="@+id/meeting_info"
                        android:visibility="gone"
                        android:background="#FF0000"
                        android:padding="8dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On-Going Meeting"/>

                  <!--  <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="16sp"
                        android:layout_below="@+id/log_out_time"
                        android:id="@+id/meeting_info"/>-->

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/meetingList"
                        android:layout_below="@+id/meeting_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/meetingList"
                        android:id="@+id/today_task_list"
                        android:orientation="vertical">

                        <app.zingo.mysolite.Custom.MyRegulerText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"

                            android:gravity="left"
                            android:text="Today Tasks"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:textColor="#000"
                            />




                        <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/task_list_dash"
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:layout_margin="8dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:focusable="true" />

                        <Button
                            android:layout_width="150dp"
                            android:layout_height="50dp"

                            android:layout_below="@+id/today_task_list"
                            android:id="@+id/read_more"
                            android:visibility="gone"
                            android:background="@drawable/rounded_landing_button"
                            android:text="Read More"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="#fff"
                            android:layout_gravity="right"
                            android:textSize="16sp"/>

                    </LinearLayout>



                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>

