<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:fitsSystemWindows="true"

    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/zoologo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ems_round"
                    android:contentDescription="TODO" />

                <app.zingo.mysolite.Custom.MyTextView
                    android:id="@+id/signin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Basic Information"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"

                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"

                    >

                    <app.zingo.mysolite.Custom.MyTextView
                        android:id="@+id/signin1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signin"
                        android:textSize="16dp"
                        android:layout_gravity="right"
                        android:gravity="end"
                        android:textColor="#2C3646"
                        />
                    <LinearLayout
                        android:layout_width="39dp"
                        android:layout_height="1.5dp"
                        android:background="#2C3646"
                        android:layout_gravity="end"
                        android:layout_marginTop="2dp"

                        />

                </LinearLayout>
            </LinearLayout>






            <app.zingo.mysolite.Custom.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name *"
                android:inputType="text"
                android:id="@+id/reseller_name"
                android:textColorHint="@color/grey_charcoal"
                android:textSize="18dp"
                android:background="#00000000"
                android:layout_marginTop="25dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9b0c3"
                android:layout_marginTop="10dp"

                />

            <app.zingo.mysolite.Custom.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Name *"
                android:inputType="text"
                android:id="@+id/reseller_user_name"
                android:textColorHint="@color/grey_charcoal"
                android:textSize="18dp"
                android:background="#00000000"
                android:layout_marginTop="25dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9b0c3"
                android:layout_marginTop="10dp"

                />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center">

                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:button="@drawable/editext_border"
                    android:background="@drawable/radio_btn_selector"
                    android:textColor="@drawable/rbtn_textcolor_selector"
                    android:text="Male"
                    android:id="@+id/reseller_male"
                    android:textSize="16sp"
                    android:gravity="center"
                    />
                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:button="@drawable/editext_border"
                    android:background="@drawable/radio_btn_selector"
                    android:textColor="@drawable/rbtn_textcolor_selector"
                    android:text="Female"

                    android:id="@+id/reseller_female"
                    android:textSize="16sp"
                    android:gravity="center"/>
                <RadioButton
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:button="@drawable/editext_border"
                    android:background="@drawable/radio_btn_selector"
                    android:textColor="@drawable/rbtn_textcolor_selector"
                    android:text="Other"
                    android:id="@+id/reseller_other"
                    android:textSize="16sp"
                    android:gravity="center"

                    />
            </RadioGroup>



            <app.zingo.mysolite.Custom.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Id *"
                android:id="@+id/reseller_email"
                android:inputType="text"
                android:textColorHint="@color/grey_charcoal"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:background="#00000000"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9b0c3"
                android:layout_marginTop="10dp"
                />



            <app.zingo.mysolite.Custom.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number *"
                android:id="@+id/reseller_mobile"
                android:inputType="number"
                android:maxLength="15"
                android:textColorHint="@color/grey_charcoal"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:background="#00000000"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9b0c3"
                android:layout_marginTop="10dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">
                    <app.zingo.mysolite.Custom.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City *"
                        android:id="@+id/reseller_city"
                        android:inputType="text"
                        android:clickable="true"
                        android:textColorHint="@color/grey_charcoal"
                        android:textSize="18dp"
                        android:background="#00000000"


                        android:focusable="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#a9b0c3"
                        android:layout_marginTop="10dp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1">
                    <app.zingo.mysolite.Custom.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Country *"
                        android:id="@+id/reseller_country"
                        android:inputType="text"
                        android:clickable="true"
                        android:textColorHint="@color/grey_charcoal"
                        android:textSize="18dp"
                        android:background="#00000000"


                        android:focusable="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#a9b0c3"
                        android:layout_marginTop="10dp"

                        />
                </LinearLayout>



            </LinearLayout>

            <app.zingo.mysolite.Custom.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password * "
                android:id="@+id/reseller_password"
                android:inputType="textPassword"
                android:textColorHint="@color/grey_charcoal"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:background="#00000000"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9b0c3"
                android:layout_marginTop="10dp"
                />

            <app.zingo.mysolite.Custom.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password *"
                android:id="@+id/reseller_confirmpwd"
                android:inputType="textPassword"
                android:textColorHint="@color/grey_charcoal"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:background="#00000000"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9b0c3"
                android:layout_marginTop="10dp"
                />

            <CheckBox
                android:id="@+id/show_hide_password"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Show Password"
                android:textColor="@color/text_black"
                android:textSize="14sp" />












            <app.zingo.mysolite.Custom.MyTextView
                android:id="@+id/createReseller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textStyle="bold"
                android:background="@drawable/round_button"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="14dp"
                android:layout_marginTop="20dp"/>

            <app.zingo.mysolite.Custom.MyTextView
                android:id="@+id/ter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By Signing up you agree with our terms and conditions"
                android:textColor="@color/grey"

                android:layout_marginBottom="16dp"
                android:textSize="12dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</RelativeLayout>