<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/employee_login"
    android:fitsSystemWindows="true"
    tools:context=".ui.landing.PhoneVerificationScreen">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#98000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:cardElevation="5dp"
                android:layout_margin ="10dp"
                android:layout_centerInParent="true"
                android:background="@android:color/white"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/colorPrimary"
                        android:layout_weight="1">

                        <app.zingo.mysolite.Custom.CustomFontTextView
                            android:id="@+id/login_app_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_margin="15dp"
                            android:text="@string/login_app_name"
                            android:textColor="@android:color/white"
                            android:textSize="22dp"
                            android:textStyle="normal"
                            app:fontName="arial">

                        </app.zingo.mysolite.Custom.CustomFontTextView>

                        <app.zingo.mysolite.Custom.CustomFontTextView
                            android:id="@+id/login_app_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="@string/login_app_desc"
                            android:textColor="@android:color/white"
                            android:textSize="18dp"
                            android:textStyle="normal"
                            app:fontName="arial">

                        </app.zingo.mysolite.Custom.CustomFontTextView>

                        <app.zingo.mysolite.Custom.CustomFontTextView
                            android:id="@+id/verify_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="120dp"
                            android:text="@string/verify_text"
                            android:textColor="@android:color/white"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            app:fontName="arial">

                        </app.zingo.mysolite.Custom.CustomFontTextView>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/number_layout"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.hbb20.CountryCodePicker
                                    android:id="@+id/ccp"
                                    android:layout_marginTop="30.0dip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:ccpDialog_keyboardAutoPopup="false"
                                    app:ccp_defaultNameCode="IN"/>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:visibility="visible"
                                    android:id="@+id/phoneInputEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20.0dip"
                                    android:backgroundTint="@color/colorAccent"
                                    android:layout_marginRight="@dimen/activity_large_margin"
                                    android:hint="Mobile Number">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/phone"
                                        android:maxLength="15"
                                        android:inputType="number"
                                        style="@style/fp_editText" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatButton
                                android:textSize="@dimen/regularFont"
                                android:textColor="@android:color/white"
                                android:id="@+id/verify_number"
                                android:background="@drawable/selector_button_app"
                                android:layout_width="wrap_content"
                                android:padding="5dp"
                                android:layout_gravity="right"
                                android:layout_height="30dp"
                                android:layout_marginLeft="@dimen/activity_large_margin"
                                android:layout_marginTop="10.0dip"
                                android:layout_marginRight="@dimen/activity_large_margin"
                                android:text="Verify"
                                android:textAllCaps="false"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/otp_layout"
                            android:visibility="gone"
                            android:orientation="vertical"
                            >

                            <app.zingo.mysolite.Custom.CustomFontTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_gravity="left"
                                android:text="@string/verify_msg"
                                android:textColor="@color/text_black"
                                android:textSize="18dp"
                                android:textStyle="normal"
                                app:fontName="arial">

                            </app.zingo.mysolite.Custom.CustomFontTextView>

                            <app.zingo.mysolite.Custom.CustomFontTextView
                                android:id="@+id/mobile_number_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="left"
                                android:text="+918220819706"
                                android:textColor="@color/colorAccent"
                                android:textSize="18dp"
                                android:textStyle="normal"
                                app:fontName="arial">

                            </app.zingo.mysolite.Custom.CustomFontTextView>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/codeInputEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20.0dip"
                                android:backgroundTint="@color/colorAccent"
                                android:layout_marginRight="@dimen/activity_large_margin"
                                android:layout_marginLeft="@dimen/activity_large_margin"
                                android:hint="6-digit code">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/otp"
                                    android:maxLength="7"
                                    android:inputType="number"
                                    style="@style/fp_editText" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="right">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:textSize="22dp"
                                    android:textColor="@color/colorPrimary"
                                    android:id="@+id/cancel"
                                    android:gravity="right"
                                    android:textColorLink="@color/colorPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cancel" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:textSize="@dimen/regularFont"
                                    android:textColor="@android:color/white"
                                    android:id="@+id/verify_code"
                                    android:background="@drawable/selector_button_app"
                                    android:layout_width="wrap_content"
                                    android:padding="5dp"
                                    android:layout_gravity="right"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="@dimen/activity_large_margin"
                                    android:layout_marginTop="10.0dip"
                                    android:layout_marginRight="@dimen/activity_large_margin"
                                    android:text="Continue"
                                    android:textAllCaps="false"/>

                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="22dp"
                                android:textColor="@color/colorPrimary"
                                android:id="@+id/resend"
                                android:gravity="center"
                                android:layout_margin="10dp"
                                android:textColorLink="@color/colorPrimary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Resend"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="22dp"
                                android:textColor="@color/colorPrimary"
                                android:id="@+id/timer"
                                android:visibility="gone"
                                android:gravity="center"
                                android:layout_margin="10dp"
                                android:textColorLink="@color/grey_charcoal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="00:00" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>




</FrameLayout>