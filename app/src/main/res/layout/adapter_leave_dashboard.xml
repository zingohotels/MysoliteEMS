<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="2dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    tools:ignore="PrivateResource">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <app.zingo.mysolite.Custom.MyRegulerText
                android:id="@+id/from_empl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:layout_margin="2dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

            <LinearLayout
                android:gravity="end"
                android:orientation="vertical"
                android:id="@+id/contact_employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/contact"
                    style="@style/OvalBack"
                    android:contentDescription="@string/todo" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/leave_update"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <app.zingo.mysolite.Custom.MyRegulerText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_margin="2dp"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                <app.zingo.mysolite.Custom.MyRegulerText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:textSize="14sp"
                    android:id="@+id/time_leave"
                    android:textColor="@color/text_grey"
                    android:layout_margin="2dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:background="@color/highLight"
                    android:layout_width="5dp"
                    android:id="@+id/status"
                    android:layout_gravity="center_vertical|start"
                    android:layout_height="match_parent"/>

                <app.zingo.mysolite.Custom.MyRegulerText
                    android:id="@+id/leave_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:layout_margin="5dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:background="@color/highLight"
                    android:layout_width="5dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_height="10dp"/>

                <app.zingo.mysolite.Custom.MyRegulerText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical|start"
                    android:textSize="14sp"
                    android:id="@+id/leave_type"
                    android:textColor="@color/grey"
                    android:layout_margin="2dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

                <TextView
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/status_text"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/p"
                    android:background="@drawable/oval_green"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>