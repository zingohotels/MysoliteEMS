<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/save"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:text="@string/save"
        android:textColor="@android:color/white"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/save">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"

                >

                <app.zingo.mysolite.Custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="Stock Category"
                    android:textColor="@color/grey_charcoal"
                    android:textSize="18dp" />

                <Spinner
                    android:id="@+id/stock_category_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"/>

               <!-- <mysolitetomSpinner
                    android:id="@+id/stock_category_spinner"
                    style="@style/Widget.AppCompat.Spinner"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_width="300dp"
                    android:dropDownWidth="wrap_content"
                    android:layout_height="50dp"
                    android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                    android:background="@drawable/spinner_bg"
                    android:popupBackground="@android:color/white"
                    android:stateListAnimator="@drawable/spinner_sla"
                    android:popupElevation="3dp" />-->




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"

                >

                <app.zingo.mysolite.Custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="Stock Sub-Category"
                    android:textColor="@color/grey_charcoal"
                    android:textSize="18dp" />

                <Spinner
                    android:id="@+id/stock_sub_category_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"/>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"

                >

                <app.zingo.mysolite.Custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="Stock Brand"
                    android:textColor="@color/grey_charcoal"
                    android:textSize="18dp" />


                <Spinner
                    android:id="@+id/stock_brand_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"/>






            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Item Name*"
                    android:layout_margin="10dp"/>
                <EditText
                    android:id="@+id/stock_category_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textCapWords"
                    android:hint="Item Name"
                    android:textColor="#000000"
                    android:layout_margin="10dp"
                    android:background="@drawable/spinner_background"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Item Description*"
                    android:layout_margin="10dp"/>
                <EditText
                    android:id="@+id/stock_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/spinner_background"
                    android:scrollbars="vertical"
                    android:gravity="top"
                    android:maxLines="5"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:lines="5"
                    android:hint="Item Description"
                    android:inputType="textMultiLine" />
            </LinearLayout>


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#696969"
                android:text="@string/fields_are_mandatory"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:id="@+id/price_layout"
                android:layout_margin="5dp"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/follow_add"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10.0dip"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginEnd="@dimen/activity_large_margin"
                    android:text="Price Details"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_price"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="SI Unit*"
                        android:layout_margin="10dp"/>
                    <EditText
                        android:id="@+id/si_unit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:inputType="textCapWords"
                        android:hint="SI Unit"
                        android:textColor="#000000"
                        android:layout_margin="10dp"
                        android:background="@drawable/spinner_background"
                        android:paddingLeft="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:text="Availablity*"
                            android:layout_margin="10dp"/>
                        <EditText
                            android:id="@+id/availablity_item"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="numberDecimal"
                            android:hint="Availablity*"
                            android:textColor="#000000"
                            android:layout_margin="10dp"
                            android:background="@drawable/spinner_background"
                            android:paddingLeft="10dp"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:text="Price For*"
                            android:layout_margin="10dp"/>
                        <EditText
                            android:id="@+id/price_for"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="numberDecimal"
                            android:hint="Price For*"
                            android:textColor="#000000"
                            android:layout_margin="10dp"
                            android:background="@drawable/spinner_background"
                            android:paddingLeft="10dp"

                            />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:text="Display Price*"
                            android:layout_margin="10dp"/>
                        <EditText
                            android:id="@+id/display_price"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="numberDecimal"
                            android:hint="Display Price*"
                            android:textColor="#000000"
                            android:layout_margin="10dp"
                            android:background="@drawable/spinner_background"
                            android:paddingLeft="10dp"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:text="Price For*"
                            android:layout_margin="10dp"/>
                        <EditText
                            android:id="@+id/selling_price"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="numberDecimal"
                            android:hint="Selling Price*"
                            android:textColor="#000000"
                            android:layout_margin="10dp"
                            android:background="@drawable/spinner_background"
                            android:paddingLeft="10dp"

                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:id="@+id/image_layout"
                android:layout_margin="5dp"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_file_upload"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10.0dip"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginEnd="@dimen/activity_large_margin"
                    android:text="@string/upload_pictures"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/stock_category_image">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
