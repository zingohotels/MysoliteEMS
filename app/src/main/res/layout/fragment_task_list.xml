<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/noRecordFound"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout2">
            <ImageView
                android:id="@+id/imageView2"
                android:background="@color/white"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/team_list"
                android:minHeight="100dp"
                android:layout_alignParentLeft="true"
                android:alpha="0.7"
                android:contentDescription="TODO" />
            <TextView
                android:textSize="12sp"
                android:textColor="@color/grey_charcoal"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Employee added."/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
          <!--  <EditText
                android:textColor="@color/colorAccent"
                android:id="@+id/employeeSearchView"
                android:background="@drawable/rounded_border_search"
                android:padding="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Search Employee"
                android:maxLines="1"/>-->
            <TextView
                android:gravity="center"
                android:id="@+id/noSearchResult"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="No Employee with given name"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listEmployees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
