<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/report_date"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_black" />


        <TextView
            android:id="@+id/report_name"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/report_login"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_grey" />

        <TextView
            android:id="@+id/report_logout"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_grey" />


        <TextView
            android:id="@+id/report_hours"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text_grey" />

        <TextView
            android:id="@+id/report_visit"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text_grey" />

        <TextView
            android:id="@+id/report_task"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text_grey" />

        <TextView
            android:id="@+id/report_expense"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text_grey" />


        <TextView
            android:id="@+id/report_expense_amount"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text_grey" />

        <TextView
            android:id="@+id/report_km"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center"
            android:text="0 Km"
            android:textColor="@color/text_grey" />



    </LinearLayout>

</LinearLayout>