<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/branch_click_layout"
        android:orientation="vertical"
        >

        <app.zingo.mysolite.Custom.MyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Branch Name"
            android:id="@+id/branch_name_adapter"
            android:textColor="#262628"
            android:layout_margin="2dp"
            android:textSize="18dp" />

        <app.zingo.mysolite.Custom.MyRegulerText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:id="@+id/branch_address"
            android:drawableLeft="@drawable/location_dynamic"
            android:drawableTint="@color/colorPrimary"
            android:text="Address"
            android:textColor="#9b9b9b"
            android:textSize="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:padding="1dp" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>