<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal"
            android:id="@+id/updateText"
            android:focusable="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="32dp">
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New version available! Click to update now!"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/renewWarning"
            android:focusable="true"
            android:visibility="visible"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/expAlertMessage"
                android:background="@color/grey"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/renew_alert_message"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:weightSum="3">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/customer_creation"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1"
                android:focusable="true">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rating_client"
                    android:contentDescription="TODO" />
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer/Client"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/attendance"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1"
                android:focusable="true">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="36dp"
                    android:background="@drawable/rounded_menu_background"
                    android:contentDescription="TODO"
                    android:padding="8dp"
                    android:src="@drawable/attendance_menu" />
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance"/>
            </LinearLayout>
            <!-- <LinearLayout
                 android:gravity="center"
                 android:orientation="vertical"
                 android:id="@+id/payments"
                 android:padding="8dp"
                 android:clickable="true"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="4dp"
                 android:layout_marginRight="4dp"
                 android:minWidth="70dp"
                 android:layout_weight="1">
                 <ImageView
                     android:background="@drawable/rounded_menu_background"
                     android:padding="8dp"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:src="@mipmap/ic_credit_card_white_48dp"/>
                 <TextView
                     android:textSize="12sp"
                     android:textColor="@color/grey_charcoal"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Payments"/>
             </LinearLayout>-->
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/leaveApplications"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1"
                android:focusable="true">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/leave_menu"
                    android:contentDescription="TODO" />
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:id="@+id/leaveBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leaves"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:weightSum="3">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/week_off_mgmt"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1"
                android:focusable="true">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/leave_menu"
                    android:contentDescription="TODO" />
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Week Off"/>
            </LinearLayout>


             <LinearLayout
                 android:gravity="center"
                 android:orientation="vertical"
                 android:id="@+id/expenses_mgmt"
                 android:padding="8dp"
                 android:clickable="true"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_marginLeft="4dp"
                 android:layout_marginRight="4dp"
                 android:minWidth="70dp"
                 android:layout_weight="1"
                 android:focusable="true">
                 <ImageView
                     android:background="@drawable/rounded_menu_background"
                     android:padding="8dp"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:src="@drawable/expenses"
                     android:contentDescription="TODO" />
                 <TextView
                     android:textSize="12sp"
                     android:textColor="@color/grey_charcoal"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Expenses"/>
             </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/task_layout"
                android:padding="8dp"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:minWidth="70dp"
                android:layout_weight="1"
                android:focusable="true">
                <ImageView
                    android:background="@drawable/rounded_menu_background"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/organize"
                    android:contentDescription="TODO" />
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/grey_charcoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task"/>
            </LinearLayout>



        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:weightSum="3">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/meeting"
                    android:padding="8dp"

                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:minWidth="70dp"
                    android:layout_weight="1"
                    android:focusable="true">
                    <ImageView
                        android:background="@drawable/rounded_menu_background"
                        android:padding="8dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/meeting_add"
                        android:contentDescription="TODO" />
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/grey_charcoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meeting"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/orders"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:minWidth="70dp"
                    android:layout_weight="1"
                    android:focusable="true">
                    <ImageView
                        android:background="@drawable/rounded_menu_background"
                        android:padding="8dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/order"
                        android:contentDescription="TODO" />
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/grey_charcoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orders"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/team"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:minWidth="70dp"
                    android:layout_weight="1"
                    android:focusable="true">
                    <ImageView
                        android:background="@drawable/rounded_menu_background"
                        android:padding="8dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/team_list"
                        android:contentDescription="TODO" />
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/grey_charcoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Team"/>
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:weightSum="3">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/salary"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:minWidth="70dp"
                    android:layout_weight="1"
                    android:focusable="true">
                    <ImageView
                        android:background="@drawable/rounded_menu_background"
                        android:padding="8dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/salary"
                        android:contentDescription="TODO" />
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/grey_charcoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/change_password"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:minWidth="70dp"
                    android:layout_weight="1"
                    android:focusable="true">
                    <ImageView
                        android:background="@drawable/rounded_menu_background"
                        android:padding="8dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/change_password"
                        android:contentDescription="TODO" />
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/grey_charcoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Password"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/department"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:minWidth="70dp"
                    android:layout_weight="1"
                    android:focusable="true">
                    <ImageView
                        android:background="@drawable/rounded_menu_background"
                        android:padding="8dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/employee_menu"
                        android:contentDescription="TODO" />
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/grey_charcoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organization"/>
                </LinearLayout>







            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:weightSum="3">


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/logout"
                    android:padding="8dp"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:minWidth="70dp"
                    android:layout_weight="1"
                    android:focusable="true">
                    <ImageView
                        android:background="@drawable/rounded_menu_background"
                        android:padding="8dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/settings_icon_noti"
                        android:contentDescription="TODO" />
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/grey_charcoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"/>
                </LinearLayout>



            </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/bottom_lay"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_rect"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:id="@+id/share_app"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp">


                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_share_24dp"
                            android:contentDescription="TODO" />

                        <app.zingo.mysolite.Custom.MyRegulerText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="Share App"
                            android:textColor="#ffffff"
                            android:textSize="12.7sp" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_rect"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:id="@+id/share_contact"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp">


                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_phone_white_24dp"
                            android:contentDescription="TODO" />

                        <app.zingo.mysolite.Custom.MyRegulerText
                            android:id="@+id/number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="Share Contact"
                            android:textColor="#ffffff"
                            android:textSize="12.7sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
