<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.zingo.mysolite.ui.Common.ReportBulkdataScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/currentMonth_layout"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/currentMonth_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/current_moth"
                    android:layout_marginLeft="10dp"/>

                <app.zingo.mysolite.Custom.MyTextView
                    android:id="@+id/currentMonth_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Current Month "
                    android:textColor="#4a4a4a"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/arrow_1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:layout_gravity="center"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="13.4dp"
                android:background="#f5f5f5"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lastMonth_layout"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/lastMonth_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/last_month"
                    android:layout_marginLeft="10dp"/>

                <app.zingo.mysolite.Custom.MyTextView
                    android:id="@+id/lastMonth_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Last Month"
                    android:textColor="#4a4a4a"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/arrow_2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:layout_gravity="center"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="13.4dp"
                android:background="#f5f5f5"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pastMonth_layout"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/pastMonth_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/past_month"
                    android:layout_marginLeft="10dp"/>

                <app.zingo.mysolite.Custom.MyTextView
                    android:id="@+id/pastMonth_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Custom Data"
                    android:textColor="#4a4a4a"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:layout_gravity="center"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="13.4dp"
                android:background="#f5f5f5"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
