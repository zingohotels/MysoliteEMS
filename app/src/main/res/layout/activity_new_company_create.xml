<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:fitsSystemWindows="true"

    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/zoologo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ems_round"
                    android:contentDescription="TODO" />

                <app.zingo.mysolite.Custom.MyTextView
                    android:id="@+id/signin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Organization Details"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"

                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"

                    >

                    <app.zingo.mysolite.Custom.MyTextView
                        android:id="@+id/signin1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signin"
                        android:textSize="16dp"
                        android:layout_gravity="right"
                        android:gravity="end"
                        android:textColor="#2C3646"
                        />
                    <LinearLayout
                        android:layout_width="39dp"
                        android:layout_height="1.5dp"
                        android:background="#2C3646"
                        android:layout_gravity="end"
                        android:layout_marginTop="2dp"

                        />

                </LinearLayout>
            </LinearLayout>






            <app.zingo.mysolite.Custom.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organization Name *"
                android:inputType="text"
                android:id="@+id/name"
                android:textColorHint="@color/grey_charcoal"
                android:textSize="18dp"
                android:background="#00000000"
                android:layout_marginTop="25dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9b0c3"
                android:layout_marginTop="10dp"

                />

            <app.zingo.mysolite.Custom.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Organization (Optional)"
                android:inputType="text"
                android:textColorHint="#a9b0c3"
                android:textColor="@color/grey_charcoal"
                android:textSize="18dp"
                android:background="#00000000"
                android:layout_marginTop="20dp"

                />

            <app.zingo.mysolite.Custom.MyEditText
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="start"
                android:gravity="start"
                android:textSize="15dp"
                android:textColor="@color/text_black"
                android:hint="Tell us about your organization"
                android:padding="8dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:keepScreenOn="true"
                android:lines="5"
                android:background="#f0f0f4"
                android:maxLines="5"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <app.zingo.mysolite.Custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Organization Address *"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:textColorHint="#a9b0c3"
                    android:textColor="@color/grey_charcoal"
                    android:textSize="18dp"
                    android:background="#00000000"
                    android:layout_marginTop="20dp"

                    />
                <app.zingo.mysolite.Custom.MyTextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/grey_charcoal"
                    android:id="@+id/my_location"
                    android:clickable="true"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:layout_marginTop="20dip"
                    android:drawableLeft="@drawable/ic_my_location_primary_24dp"
                    android:drawablePadding="5dp"
                    android:text="Current Location"
                    android:focusable="true" />
            </LinearLayout>



            <app.zingo.mysolite.Custom.MyEditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="start"
                android:gravity="start"
                android:textColor="@color/text_black"
                android:hint="Organization Address"
                android:padding="8dp"
                android:textSize="15dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:keepScreenOn="true"
                android:lines="5"
                android:background="#f0f0f4"
                android:maxLines="5"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">
                    <app.zingo.mysolite.Custom.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="City *"
                        android:id="@+id/city"
                        android:inputType="text"
                        android:clickable="true"
                        android:textColorHint="@color/grey_charcoal"
                        android:textSize="18dp"
                        android:background="#00000000"


                        android:focusable="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#a9b0c3"
                        android:layout_marginTop="10dp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1">
                    <app.zingo.mysolite.Custom.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="State*"
                        android:id="@+id/state"
                        android:inputType="text"
                        android:clickable="true"
                        android:textColorHint="@color/grey_charcoal"
                        android:textSize="18dp"
                        android:background="#00000000"


                        android:focusable="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#a9b0c3"
                        android:layout_marginTop="10dp"

                        />
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1">
                    <app.zingo.mysolite.Custom.MyEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Founded Year"
                        android:id="@+id/build"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColorHint="@color/grey_charcoal"
                        android:textSize="18dp"
                        android:background="#00000000"


                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#a9b0c3"
                        android:layout_marginTop="10dp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1">
                    <app.zingo.mysolite.Custom.MyEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Total Employees *"
                        android:inputType="number"
                        android:maxLength="3"
                        android:id="@+id/employee_count"
                        android:textColorHint="@color/grey_charcoal"
                        android:textSize="18dp"
                        android:background="#00000000"


                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#a9b0c3"
                        android:layout_marginTop="10dp"

                        />
                </LinearLayout>



            </LinearLayout>





            <app.zingo.mysolite.Custom.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Website(Optional)"
                android:id="@+id/website"
                android:inputType="textWebEditText"
                android:textColorHint="@color/grey_charcoal"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:background="#00000000"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9b0c3"
                android:layout_marginTop="10dp"
                />

            <app.zingo.mysolite.Custom.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reseller Code (Optional) "
                android:id="@+id/reseller_code"
                android:inputType="text"
                android:textColorHint="@color/grey_charcoal"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:background="#00000000"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a9b0c3"
                android:layout_marginTop="10dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/plan_layout"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:text="Plans(Prices are in INR)"
                    android:textColor="@color/text_black"
                    android:textSize="20dp"
                    android:padding="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="40dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_gravity="center"
                        android:background="@color/text_black"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/text_black"
                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"

                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/text_black"
                                android:text="Plan Name"/>
                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/text_black"
                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/text_black"
                                android:text="3 Month"/>







                        </LinearLayout>


                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/text_black"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/text_black"
                                android:text="6 Months"/>



                        </LinearLayout>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/text_black"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/text_black"
                                android:text="1 Year"/>



                        </LinearLayout>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@color/text_black"
                            />


                    </LinearLayout>


                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/text_black"
                        />


                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/plans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:focusable="true" />

            </LinearLayout>


            <app.zingo.mysolite.Custom.MyTextView
                android:id="@+id/createCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Organization"
                android:textStyle="bold"
                android:background="@drawable/round_button"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="14dp"
                android:layout_marginTop="20dp"/>

            <app.zingo.mysolite.Custom.MyTextView
                android:id="@+id/ter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By creating organization you agree with our terms and conditions"
                android:textColor="@color/grey"

                android:layout_marginBottom="16dp"
                android:textSize="12dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</RelativeLayout>