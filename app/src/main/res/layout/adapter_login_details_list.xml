<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:focusableInTouchMode="true"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/view_color"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#FF0000"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/meeting_count"
                        android:text="Login 1"
                        android:layout_margin="5dp"
                        android:textSize="20dp"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Log-in Detail"
                            android:layout_weight="2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/text_black"/>

                        <EditText
                            android:layout_weight="1"
                            android:id="@+id/check_in_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/spinner_background"
                            android:gravity="left|top"
                            android:hint="Log-in Details"
                            android:inputType="text|textMultiLine"
                            android:lines="10"
                            android:textColor="#000000"
                            android:maxLines="10"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:layout_marginBottom="5dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Log-out Detail"
                            android:layout_weight="2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/text_black"/>

                        <EditText
                            android:layout_weight="1"
                            android:id="@+id/check_out_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:enabled="false"
                            android:background="@drawable/spinner_background"
                            android:gravity="left|top"
                            android:hint="Log-Out Details"
                            android:inputType="text|textMultiLine"
                            android:lines="10"
                            android:textColor="#000000"
                            android:maxLines="10"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:singleLine="true" />
                    </LinearLayout>



                </LinearLayout>





            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </ScrollView>

</RelativeLayout>
